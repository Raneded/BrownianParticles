<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="io.github.dergenaue.brownianparticles">

    <application android:allowBackup="true" android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher">
        <service
            android:name=".BrownianParticlesWallpaperService"
            android:enabled="true"
            android:exported="true"
            android:label="@string/app_name"
            android:permission="android.permission.BIND_WALLPAPER" >
            <intent-filter>
                <action android:name="android.service.wallpaper.WallpaperService" >
                </action>
            </intent-filter>

            <meta-data
                android:name="android.service.wallpaper"
                android:resource="@xml/brownian_wallpaper" >
            </meta-data>
        </service>

        <activity
            android:name=".BrownianParticlesPreferenceActivity"
            android:exported="true"
            android:theme="@android:style/Theme.Light.WallpaperSettings"
            tools:ignore="ExportedPreferenceActivity">
        </activity>
    </application>

    <uses-feature android:glEsVersion="0x00011000" android:required="true" />

    <uses-feature
        android:name="android.software.live_wallpaper"
        android:required="true" >
    </uses-feature>
</manifest>
